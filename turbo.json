{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalPassThroughEnv": ["*"],
  "globalDependencies": [],
  "globalDotEnv": [],
  "globalEnv": [],
  "remoteCache": {
    "enabled": false
  },
  "tasks": {
    "//#bootstrap": {
      "cache": false
    },
    "//#bootstrap:root": {
      "cache": false
    },
    "//#bootstrap:packages": {
      "cache": false
    },
    "//#format": {
      "cache": false
    },
    "//#format:check": {
      "cache": false
    },
    "//#update-version-to": {
      "cache": false
    },
    "//#update-stream-name-to": {
      "cache": false
    },
    "//#update-kogito-version-to": {
      "cache": false
    },
    "bootstrap": {
      "cache": false,
      "dependsOn": ["//#bootstrap", "^bootstrap"]
    },
    "build:dev": {
      "cache": false,
      "dependsOn": ["^build:dev"]
    },
    "build:prod": {
      "cache": false,
      "dependsOn": ["^build:prod"]
    },
    "start:app": {
      "cache": false,
      "persistent": true
    },
    "start:lib": {
      "cache": false,
      "persistent": true
    }
  }
}
